@model Inventory.ViewModels.Supplier.SupplierCreateViewModel

@{
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <b>Create Supplier</b>
                </div>
                <div class="card-body">
                    <form method="POST">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input class="form-control" asp-for="Name"/>
                            <span class="alert-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone"></label>
                            <input class="form-control" asp-for="Phone"/>
                            <span class="alert-danger" asp-validation-for="Phone"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input class="form-control" asp-for="Email"/>
                            <span class="alert-danger" asp-validation-for="Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address"></label>
                            <input class="form-control" asp-for="Address"/>
                        </div>
                        <button class="btn btn-primary pull-right" type="submit">Create</button>
                    </form>


                </div>
            </div>
        </div>
    </div>

</div>