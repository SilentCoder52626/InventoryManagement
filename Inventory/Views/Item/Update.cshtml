@model Inventory.ViewModels.Item.ItemUpdateViewModel 

@{
    Layout = "_Layout";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <b>Update Item</b>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="Item" asp-action="Update">
                        <div class="form-group">
                            <label asp-for="ItemId"></label>
                            <input class="form-control" readonly type="text" asp-for="ItemId" />
                        </div>

                        <div class="form-group">
                            <label asp-for="Name" class="required"></label>
                            <input class="form-control" type="text" asp-for="Name" required="required"/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UnitId" class="required"></label>
                            <select asp-for="UnitId" asp-items="@Model.UnitSelectList" class="form-control"></select>
                            <span asp-validation-for="UnitId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rate" class="required"></label>
                            <input class="form-control" asp-for="Rate" required="required"/>
                            <span asp-validation-for="Rate" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-info">Update Item</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>